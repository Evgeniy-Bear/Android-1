<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableRow>
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        <TextView
            android:id="@+id/textVLang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/descriptionLanguage"
            android:textSize="@dimen/textSize" />
        <TextView
            android:id="@+id/textVLAng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/language"
            android:textSize="@dimen/textSize" />

    </TableRow>
    <TableRow>
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        <TextView
            android:id="@+id/textVOri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/descriptionOrientation"
            android:textSize="@dimen/textSize" />
        <TextView
            android:id="@+id/textOri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/orientation"
            android:textSize="@dimen/textSize" />

    </TableRow>
    <TableRow>
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        <TextView
            android:id="@+id/textVNight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/descriptionNight_mode"
            android:textSize="@dimen/textSize" />
        <TextView
            android:id="@+id/textNight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/night_mode"
            android:textSize="@dimen/textSize" />

    </TableRow>
    <TableRow>
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        <TextView
            android:id="@+id/textVScreenFormat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/descriptionScreen_format"
            android:textSize="@dimen/textSize" />
        <TextView
            android:id="@+id/textScreenFormat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/screen_format"
            android:textSize="@dimen/textSize" />

    </TableRow>
    <TableRow>
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        <TextView
            android:id="@+id/textVVersion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/descriptionVersion"
            android:textSize="@dimen/textSize" />
        <TextView
            android:id="@+id/textVersion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/version"
            android:textSize="@dimen/textSize" />

    </TableRow>


</TableLayout>